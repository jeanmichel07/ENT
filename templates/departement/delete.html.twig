<form method="post" action="{{ path('departement_delete', {'id': departement.id }) }}" onsubmit="return confirm('voulez-vous vraiment supprimer?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ departement.id) }}">
    <button class="btn btn-danger btn-lg btn-block">Supprimer</button>
</form>
