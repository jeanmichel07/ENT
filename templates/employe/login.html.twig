<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<style>
    body{
        margin: 0;
        padding: 0;
        font-family: sans-serif;
        background: #ccc;
    }
    section{
        width: 100%;
        height: 100vh;
        background-image: url("http://localhost/ENT/public/images/bg1.jpg") no-repeat center;
        background-size: cover;
        margin-top: -40px;
        padding: 0;
    }
    .box{
        width: 300px;
        padding: 40px;
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);

        text-align: center;
    }
    .box h1{
        color: #3b91b2;
        text-transform: uppercase;
        font-weight: 500;
    }
    .box input[type="text"],.box input[type="password"]{
        border:0;
        background: none;
        display: block;
        margin: 20px auto;
        text-align: center;
        border: 2px solid #FFFFFF;
        padding: 14px 10px;
        width: 200px;
        outline: none;
        color: white;
        border-radius:24px ;
        transition: 0.25s;
    }
    .box input[type="text"]:focus,.box input[type="password"]:focus{
        width: 280px;
        border-color: #3b91b2;
    }
    .box input[type="submit"]{
        border:0;
        background: #3b91b2;
        display: block;
        margin: 20px auto;
        text-align: center;
        border: 2px solid #3b91b2;
        padding: 14px 40px;
        width: 150px;
        outline: none;
        color: white;
        border-radius:24px ;
        transition: 0.25s;
        cursor: pointer;
    }
    .box input[type="submit"]:hover{
        background: none;
    }
</style>
<body>
    {% if err is defined %}
        {{ err }}
    {% else %}
        <p></p>
    {% endif %}
    <section>
    <div class="box">
        {{ form_start(form) }}
        <h1>Login Employ√©</h1>
        {{ form_row(form.username) }}
        {{ form_row(form.password) }}
        <input type="submit" value="Se connecter" class="btn">
        {{ form_end(form) }}
    </div>
    </section>




</body>
</html>